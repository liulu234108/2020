<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.youth.banner.Banner
            android:id="@+id/banner"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="220dp"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/home_tab"
            app:tabIndicatorHeight="0dp"
            app:layout_constraintTop_toBottomOf="@id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="品牌制造商直供"
            android:id="@+id/hometext_brand"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/home_tab"
            android:textSize="18sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hometext_brand"/>
       <!-- <TextView
            android:id="@+id/hometext_newproduct"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="周一周四·新品首发"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/home_brand"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_newproduct"
            app:layout_constraintTop_toBottomOf="@id/hometext_newproduct"
           />
        <TextView
            android:id="@+id/hometext_recommend"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="人气推荐"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/home_newproduct"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_recommend"
            app:layout_constraintTop_toBottomOf="@id/hometext_recommend"
            />
        <TextView
            android:id="@+id/hometext_subject"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="专题精选"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/home_recommend"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hometext_subject"
            android:id="@+id/home_layout"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_subject"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/hometext_living_at_home"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="居家"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/home_newproduct"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_living_at_home"
            app:layout_constraintTop_toBottomOf="@id/hometext_living_at_home"
            />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>